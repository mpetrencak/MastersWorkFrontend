<div class="card mt-3">
    @if (ContainHeader)
    {
        <div class="card-header">
            <span class="text-info">@HeaderText</span>
        </div>
    }
    <div class="card-body">
        @ChildContent
    </div>
</div>

@code
{
    [Parameter]
    public bool ContainHeader { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? HeaderText { get; set; }
}
